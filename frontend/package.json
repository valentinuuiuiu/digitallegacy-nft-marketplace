{
  "name": "digitalllegacy-frontend",
  "version": "1.0.0",
  "description": "DigitalLegacy NFT Marketplace Frontend",
  "main": "server.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./src/assets/css/tailwind.css",
    "build": "npm run build:css && mkdir -p dist && cp -r . dist/ && rm -rf dist/node_modules dist/.env",
    "start": "node server.js",
    "dev": "npm run build:css & nodemon server.js",
    "preview": "npm run build && cd dist && python3 -m http.server 8080"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  }
}
